<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="40.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wallet.app.controller.WelcomeController">
    <padding>
        <Insets bottom="60.0" left="60.0" right="60.0" top="60.0" />
    </padding>
    
    <!-- App Title -->
    <Label text="Satoshi Vault" fx:id="appNameLabel">
        <font>
            <Font name="System Bold" size="48.0" />
        </font>
    </Label>
    
    <!-- Subtitle -->
    <Label text="Secure Bitcoin Wallet">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    
    <!-- Description -->
    <Label text="Manage your bitcoin securely with Satoshi Vault" wrapText="true">
        <font>
            <Font size="14.0" />
        </font>
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </Label>
    
    <!-- Buttons Container -->
    <HBox spacing="20.0" alignment="CENTER">
        <VBox.margin>
            <Insets top="40.0" />
        </VBox.margin>
        
        <!-- Login Button -->
        <Button fx:id="loginButton" onAction="#handleLogin" text="Login" prefWidth="150.0" prefHeight="50.0">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        
        <!-- Register Button -->
        <Button fx:id="registerButton" onAction="#handleRegister" text="Register" prefWidth="150.0" prefHeight="50.0">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
    </HBox>
</VBox>
