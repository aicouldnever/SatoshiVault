<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="30.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wallet.app.controller.PasswordSetupController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15.0">
        <Button fx:id="backButton" text="← Back" onAction="#handleBack" style="-fx-font-size: 12;">
            <HBox.margin>
                <Insets right="20.0" />
            </HBox.margin>
        </Button>
        <Label text="Satoshi Vault - Registration">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
    </HBox>
    
    <!-- Progress indicator -->
    <Label text="Step 1 of 2: Create Your Password">
        <font>
            <Font size="14.0" style="italic" />
        </font>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Label>
    
    <!-- Main content -->
    <VBox spacing="25.0" alignment="CENTER">
        <VBox.margin>
            <Insets top="30.0" />
        </VBox.margin>
        
        <!-- Description -->
        <Label text="Create a strong password to secure your wallet" wrapText="true">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        
        <!-- Password Section -->
        <VBox spacing="8.0">
            <Label text="Password">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Label>
            <PasswordField fx:id="passwordField" promptText="Enter a strong password" prefWidth="400.0" />
        </VBox>
        
        <!-- Confirm Password Section -->
        <VBox spacing="8.0">
            <Label text="Confirm Password">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Label>
            <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password" prefWidth="400.0" />
        </VBox>
        
        <!-- Password Requirements -->
        <VBox spacing="5.0" style="-fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 15;">
            <Label text="Password Requirements:" style="-fx-text-fill: #666;">
                <font>
                    <Font size="11.0" style="italic" />
                </font>
            </Label>
            <Label text="• At least 8 characters" style="-fx-text-fill: #999;" />
            <Label text="• Mix of uppercase and lowercase letters" style="-fx-text-fill: #999;" />
            <Label text="• At least one number" style="-fx-text-fill: #999;" />
            <Label text="• At least one special character (!@#$%^&*)" style="-fx-text-fill: #999;" />
        </VBox>
        
        <!-- Error Label -->
        <Label fx:id="errorLabel" styleClass="error-label" visible="false" textFill="#d32f2f">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>
        
        <!-- Next Button -->
        <Button fx:id="nextButton" onAction="#handleNext" text="Next" prefWidth="400.0" prefHeight="45.0" style="-fx-font-size: 14;">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Button>
    </VBox>
</VBox>
