<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="30.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wallet.app.controller.LoginController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15.0">
        <Button fx:id="backButton" text="â† Back" onAction="#handleBack" style="-fx-font-size: 12;">
            <HBox.margin>
                <Insets right="20.0" />
            </HBox.margin>
        </Button>
        <Label text="Satoshi Vault - Login">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
    </HBox>
    
    <!-- Main content -->
    <VBox spacing="25.0" alignment="CENTER">
        <VBox.margin>
            <Insets top="30.0" />
        </VBox.margin>
        
        <!-- Password Section -->
        <VBox spacing="8.0">
            <Label text="Step 1: Enter your Password">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <PasswordField fx:id="passwordField" promptText="Enter your password" prefWidth="400.0" />
        </VBox>
        
        <!-- Pass Phrase Section -->
        <VBox spacing="8.0">
            <Label text="Step 2: Enter your Seed Phrase">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <TextField fx:id="passphraseField" promptText="Enter your 12-word seed phrase" prefWidth="400.0" wrapText="true" />
        </VBox>
        
        <!-- Error Label -->
        <Label fx:id="errorLabel" styleClass="error-label" visible="false" textFill="#d32f2f">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>
        
        <!-- Login Button -->
        <Button fx:id="loginButton" onAction="#handleLogin" text="Login" prefWidth="400.0" prefHeight="45.0" style="-fx-font-size: 14;">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Button>
    </VBox>
</VBox>
