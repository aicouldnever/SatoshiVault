<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>

<HBox alignment="CENTER_LEFT" spacing="8.0" styleClass="bottom-nav" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="12.0" left="5.0" right="5.0" top="12.0" />
    </padding>
    
    <Button fx:id="homeButton" text="Home" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
    <Button fx:id="sendButton" text="Send" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
    <Button fx:id="receiveButton" text="Receive" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
    <Button fx:id="historyButton" text="History" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
    <Button fx:id="settingsButton" text="Settings" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
</HBox>